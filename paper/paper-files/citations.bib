	journal = {Scientific Reports},
	author = {Semmens, Brice X and Semmens, Darius J and Thogmartin, Wayne E and Wiederholt, Ruscena and López-Hoffman, Laura and Diffendorfer, Jay E and Pleasants, John M and Oberhauser, Karen S and Taylor, Orley R},
