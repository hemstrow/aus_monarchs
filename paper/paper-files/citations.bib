@article{Thompson177,
	title = {Anthropogenic habitat alteration leads to rapid loss of adaptive variation and restoration potential in wild salmon populations},
	volume = {116},
	issn = {0027-8424},
	url = {https://www.pnas.org/content/116/1/177},
