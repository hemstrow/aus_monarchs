}

@article{yooCompetingE3Ubiquitin2013,
	title = {Competing {E3} {Ubiquitin} {Ligases} {Govern} {Circadian} {Periodicity} by {Degradation} of {CRY} in {Nucleus} and {Cytoplasm}},
	volume = {152},
	issn = {0092-8674},
