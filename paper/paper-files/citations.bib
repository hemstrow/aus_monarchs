	year = {2007},
	note = {Publisher: John Wiley \& Sons, Ltd},
	keywords = {global climate change, abundance, Christmas Bird Count, common species, distribution of avifauna, geographical range, North America, temporal turnover, winter range},
	pages = {1803--1812},
