	journal = {Integrative and Comparative Biology},
	author = {Brower, Lincoln P. and Fink, Linda S. and Walford, Peter},
	month = dec,
	year = {2006},
	pages = {1123--1142},
}

@article{hemstromSnpRUserFriendly2023,
