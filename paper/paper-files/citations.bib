	note = {Publisher: John Wiley \& Sons, Ltd},
	keywords = {Danaus plexippus, hybridization, monarch butterfly, migration, butterfly, cardenolide fingerprint analysis, Cuba, Danaus plexippus megalippe, Danaus plexippus plexippus, Mexico, stable isotope, thin-layer chromatography},
	pages = {1106--1114},
